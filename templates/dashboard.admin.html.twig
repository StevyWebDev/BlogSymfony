<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
    {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>
<body>
<header>
    <nav>
        <ul>
            <li><a href="{{ path('home') }}">Accueil</a></li>
            <li><a href="{{ path('post_view') }}">Liste des post</a></li>
            {% if is_granted('ROLE_USER') %}
                <li><a href="{{ path('user_logout') }}">Déconnexion</a></li>
            {% else %}
                <li><a href="{{ path('user_login') }}">Connexion</a></li>
                <li><a href="{{ path('app_register') }}">Inscription</a></li>
            {% endif %}

            {% if is_granted('ROLE_ADMIN') %}
                <li><a href="{{ path('user_show') }}">Admin</a></li>
            {% endif %}
        </ul>
    </nav>

    <main>
        <aside>
            <nav>
                <ul>
                    {% if is_granted('ROLE_EDITOR') %}
                        <li><a href="{{ path('post_form') }}">créer un post</a></li>
                    {% endif %}
                </ul>
            </nav>
        </aside>
        {% block body %}{% endblock %}
    </main>
</header>
</body>
</html>
